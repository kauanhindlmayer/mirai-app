{
  "name": "mirai-app",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write src/",
    "prepare": "husky"
  },
  "dependencies": {
    "@pinia/colada": "^0.13.3",
    "@pinia/colada-plugin-delay": "^0.0.3",
    "@primevue/forms": "^4.2.4",
    "@primevue/themes": "^4.2.4",
    "@vueuse/core": "^12.3.0",
    "@vueuse/router": "^12.5.0",
    "axios": "^1.7.9",
    "chart.js": "^4.4.7",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^4.1.0",
    "pinia": "^2.2.6",
    "primeicons": "^7.0.0",
    "primevue": "^4.2.4",
    "quill": "^2.0.3",
    "vue": "^3.5.13",
    "vue-meta": "3.0.0-alpha.10",
    "vue-router": "^4.5.0",
    "vuedraggable": "^4.1.0",
    "yup": "^1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@playwright/test": "^1.49.0",
    "@primevue/auto-import-resolver": "^4.2.4",
    "@tsconfig/node22": "^22.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.9.3",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/eslint-plugin": "1.1.10",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.14.0",
    "eslint-plugin-oxlint": "^0.11.0",
    "eslint-plugin-playwright": "^2.1.0",
    "eslint-plugin-vue": "^9.30.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.11",
    "npm-run-all2": "^7.0.1",
    "oxlint": "^0.11.0",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "sass": "^1.82.0",
    "tailwindcss": "^3.4.16",
    "tailwindcss-primeui": "^0.3.4",
    "typescript": "~5.6.3",
    "unplugin-vue-components": "^0.27.5",
    "unplugin-vue-router": "^0.11.2",
    "vite": "^6.0.1",
    "vite-plugin-vue-devtools": "^7.6.7",
    "vitest": "^2.1.5",
    "vue-tsc": "^2.1.10"
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "oxlint . --fix -D correctness --ignore-path .gitignore"
    ],
    "*.{js,ts,vue,json,md,html,css,scss}": [
      "prettier --write"
    ]
  }
}
